{
  "$id": "https://example.com/schemas/agent-config.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Configuration Schema",
  "type": "object",
  "required": ["agent_name", "version", "specialization"],
  "properties": {
    "agent_name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "specialization": {
      "type": "string"
    },
    "ai_models": {
      "type": "object",
      "additionalProperties": true
    },
    "research_capabilities": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": true
}
