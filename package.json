{
  "name": "hyperformant",
  "version": "2.0.0",
  "description": "AI-powered market intelligence platform with Next.js + PostgreSQL + n8n architecture",
  "main": "dist/cli.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "ts-node src/cli.ts dev",
    "build": "cd web && npm run build",
    "build:fallback": "cd web && npm run build:fallback",
    "test": "jest && cd web && npm test",
    "lint": "./node_modules/.bin/eslint src/ web/src/ --ext .ts,.tsx,.js,.jsx --fix",
    "format": "./node_modules/.bin/prettier --write \"src/**/*.{ts,tsx,json,md}\" \"web/src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "validate": "ts-node src/cli.ts validate",
    "setup": "ts-node src/cli.ts setup",
    "db:reset": "npx dotenv -e .env.local -- npx prisma migrate reset",
    "db:generate": "npx dotenv -e .env.local -- npx prisma generate",
    "postgenerate": "mkdir -p web/node_modules/@prisma && cp -r node_modules/@prisma/client web/node_modules/@prisma/",
    "db:migrate": "npx dotenv -e .env.local -- npx prisma migrate dev",
    "db:seed": "npx dotenv -e .env.local -- npx prisma db seed",
    "db:studio": "npx dotenv -e .env.local -- npx prisma studio --browser none",
    "deploy": "npm run validate && npm run db:reset && ts-node src/cli.ts import-n8n",
    "import:local": "ts-node src/cli.ts import-n8n --local",
    "import:dev": "ts-node src/cli.ts import-n8n dev",
    "import:prod": "ts-node src/cli.ts import-n8n prod",
    "install:all": "npm install && cd web && npm install",
    "clean:all": "rm -rf node_modules package-lock.json dist/ coverage/ web/.next/ web/node_modules web/package-lock.json",
    "prepare": "husky"
  },
  "keywords": [
    "ai",
    "automation",
    "apollo",
    "business-intelligence",
    "market-forces",
    "nextjs",
    "hono",
    "n8n"
  ],
  "author": "hyperformant",
  "license": "PROPRIETARY",
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@prisma/client": "^6.14.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.15.30",
    "@types/node-cron": "^3.0.11",
    "@types/yargs": "^17.0.33",
    "ajv": "^8.17.1",
    "dotenv": "^16.5.0",
    "js-yaml": "^4.1.0",
    "node-cron": "^4.2.1",
    "react-map-gl": "^8.0.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "yargs": "^17.7.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^9.2.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.55.0",
    "eslint-config-next": "^15.4.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "prisma": "^6.14.0",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
