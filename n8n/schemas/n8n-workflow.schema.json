{
  "$id": "https://example.com/schemas/n8n-workflow.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "n8n Workflow Definition Schema",
  "type": "object",
  "required": ["name", "nodes", "connections"],
  "properties": {
    "name": { "type": "string" },
    "nodes": {
      "type": "array",
      "items": { "type": "object" }
    },
    "connections": {
      "type": "object",
      "additionalProperties": { "type": "array", "items": { "type": "array" } }
    }
  },
  "additionalProperties": true
}
